<Window x:Class="Pham_Hong_Quan_SE18D05_Assignment_01.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - FU Mini Hotel System" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF6B73FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5555FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6B73FF" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🏨" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="FU Mini Hotel System - Admin Dashboard" FontSize="20" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Logout" HorizontalAlignment="Right" Click="Logout_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="20" FontSize="14">
            <TabItem Header="👥 Customer Management" FontSize="14">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" Content="Create Booking" HorizontalAlignment="Left" Click="CreateBooking_Click"/>
                    <DataGrid Grid.Row="1" x:Name="CustomersDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="50"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="200"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="200"/>
                            <DataGridTextColumn Header="Telephone" Binding="{Binding Telephone}" Width="150"/>
                            <DataGridTextColumn Header="Birthday" Binding="{Binding CustomerBirthday, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Click="EditCustomer_Click" Tag="{Binding CustomerID}"/>
                                            <Button Content="Delete" Click="DeleteCustomer_Click" Tag="{Binding CustomerID}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="🏠 Room Management" FontSize="14">
                <Grid Margin="10">
                    <DataGrid x:Name="RoomsDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="50"/>
                            <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="120"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}" Width="250"/>
                            <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="100"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding RoomPricePerDate, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding RoomType.RoomTypeName}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Click="EditRoom_Click" Tag="{Binding RoomID}"/>
                                            <Button Content="Delete" Click="DeleteRoom_Click" Tag="{Binding RoomID}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="📋 Booking Management" FontSize="14">
                <Grid Margin="10">
                    <DataGrid x:Name="BookingsDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationID}" Width="100"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CustomerFullName}" Width="200"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=C}" Width="150"/>
                            <DataGridTextColumn Header="Room Number" Binding="{Binding BookingDetails[0].RoomInformation.RoomNumber}" Width="150"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding BookingDetails[0].StartDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTextColumn Header="End Date" Binding="{Binding BookingDetails[0].EndDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Click="EditBooking_Click" Tag="{Binding BookingReservationID}"/>
                                            <Button Content="Delete" Click="DeleteBooking_Click" Tag="{Binding BookingReservationID}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="📊 Reports" FontSize="14">
                <Grid Margin="10">
                    <TextBlock Text="Reports functionality will be implemented here" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              FontSize="18" Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>